	author = {Vargas, Mariana Campos},
	month = jul,
	year = {2013},
	keywords = {socio-demographic characteristics},
	file = {Full Text PDF:/Users/diegovegav/Zotero/storage/HU6RCF7Q/Vargas - 2013 - La población con discapacidad en los censos del siglo XX en Costa Rica.pdf:application/pdf},
}

